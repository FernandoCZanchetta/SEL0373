{
  "name": "site",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href https://fernandoczanchetta.github.io/SEL0373/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "npx eslint . && npx prettier -c .",
    "format": "npx eslint --fix .; npx prettier --write .",
    "precommit": "npm lint-staged && npm lint"
  },
  "lint-staged": {
    "*.{ts,js,json,scss,sass,css,md}": [
      "npx eslint --fix .",
      "npx prettier --write .",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.11",
    "@angular/common": "^17.3.11",
    "@angular/compiler": "^17.3.11",
    "@angular/core": "^17.3.11",
    "@angular/forms": "^17.3.11",
    "@angular/platform-browser": "^17.3.11",
    "@angular/platform-browser-dynamic": "^17.3.11",
    "@angular/router": "^17.3.11",
    "@npmcli/package-json": "^5.2.0",
    "bootstrap": "^5.1.3",
    "chart.js": "^4.4.3",
    "glob": "^10.4.1",
    "ngx-bootstrap": "^8.0.0",
    "ngx-mqtt": "^17.0.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.4",
    "@angular/cli": "^17.3.8",
    "@angular/compiler-cli": "^17.3.11",
    "@types/bootstrap": "^5.1.9",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.20.43",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "jasmine-core": "~3.10.0",
    "lint-staged": "^12.2.0",
    "prettier": "^2.5.1",
    "typescript": "~5.4.5"
  },
  "overrides": {
    "autoprefixer": "10.4.5"
  }
}